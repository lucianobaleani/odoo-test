<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="fleet_vehicule_views_form">
        <field name="name">fleet.vehicule.form</field>
        <field name="model">fleet.vehicule</field>
        <field name="arch" type="xml">
            <form string="Vehicule Form">
                <sheet>
                    <h1><field name="brand_model"/></h1>
                        <group>
                            <group>
                                <field name="sale_date"/>
                                <field name="sale_price"/>
                                <field name="quantity_service"/>
                            </group>
                            <group>
                                <field name="measurement_unit"/>
                                <field name="distance"/>
                                <field name="current_price"/>
                            </group>
                        </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="fleet_vehicule_list">
        <field name="name">fleet.vehicule.list</field>
        <field name="model">fleet.vehicule</field>
        <field name="arch" type="xml">
            <tree string="Vehicule's Fleet">
                <field name="brand_model"/>
                <field name="sale_date"/>
                <field name="measurement_unit"/>
                <field name="distance"/>
            </tree>
        </field>
    </record>
</odoo>