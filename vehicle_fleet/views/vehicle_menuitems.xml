<?xml version ="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="fleet_vehicle_list_action">
        <field name="name">Vehicles</field>
        <field name="res_model">fleet.vehicle</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first vehicle record
            </p> 
        </field>
    </record>

    <record model="ir.actions.act_window" id="fleet_vehicle_report_list_action">
        <field name="name">Report List</field>
        <field name="res_model">fleet.vehicle.report</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first report record
            </p> 
        </field>
    </record>



    <menuitem name="Fleet"
            id="menu_fleet"
            sequence="1"/>

    <menuitem id="menu_fleet_vehicle" parent="menu_fleet" sequence="2"
    action="fleet_vehicle_list_action"/> 

    <menuitem id="fleet_vehicle_report" parent="menu_fleet" sequence="3"/> 
    
    <menuitem id="fleet_vehicle_report_creation" parent="fleet_vehicle_report" sequence="4"
    action="launch_report_wizard"/>

    <menuitem id="fleet_vehicle_report_list" parent="fleet_vehicle_report" sequence="5"
    action="fleet_vehicle_report_list_action"/>

</odoo>